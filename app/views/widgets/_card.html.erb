<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="well">

    <div class="card-content">
      <h2><%= card.card_title %></h2>
      <p><%= card.card_content %></p>
    </div>

    <hr/>

    <div class="card-actions">
      <% card.card_actions.each do |action| %>
        <%= action %>
      <% end %>
    </div>

  </div>
</div>
